<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.hr.bankapp.repository.interfaces.HistoryRepository">

	<insert id="insert"
		parameterType="com.hr.bankapp.repository.model.History">
		insert into
		history_tb(
		amount, w_balance, d_balance,
		w_account_id, d_account_id)
		values(
		#{amount}, #{wBalance}, #{dBalance},
		#{wAccountId}, #{dAccountId}
		)
	</insert>

	<update id="updateById"
		parameterType="com.hr.bankapp.repository.model.History">
		update history_tb
		set amount = #{amount},
		w_balance =
		#{wBalance},
		d_balace = #{dBalance},
	</update>

	<delete id="deleteById" parameterType="int">
		delete from history_tb
		where id = #{id}
	</delete>
	
	<select id="findById" resultType="com.hr.bankapp.repository.model.History">
		select * from history_tb where id = #{id}
	</select>

	<select id="findAll" resultType="com.hr.bankapp.repository.model.History">
		select * from history_tb
	</select>


</mapper>